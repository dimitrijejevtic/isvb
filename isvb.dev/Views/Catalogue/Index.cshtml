@model IEnumerable<isvb.dev.ViewModels.CatalogViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LatName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <img src="http://www.priroda-leci-sve.com/slike/paradajz.gif" height="100" width="100" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LatName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @if (User.IsInRole("Administrator") || User.IsInRole("Owner"))
            {
            @Html.ActionLink("Edit", "Edit", new { id = item.ProductId })
            @Html.ActionLink("Details", "Details", new { id = item.ProductId })  
            @Html.ActionLink("Delete", "Delete", new { id = item.ProductId })
            }
            else 
            {
            @Html.ActionLink("Details", "Details", new { id = item.ProductId }) 
            }

                   
        </td>
    </tr>
}

</table>
