@model isvb.dev.ViewModels.EditRoleViewModel
@{
    ViewBag.Title = "Edit Role";
}

<h2>EditRole</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
    <h4>Edit role for @Model.Email</h4>
    <hr/>
    @Html.ValidationSummary(true,"",new {@class = "text-danger" })
    @Html.HiddenFor(model => model.Id)
    <div class="form-group">
        @Html.Label("Roles",htmlAttributes: new { @class = "control-label col-md-3" })
        <div class="col-md-7">
            @Html.DropDownListFor(model=>model.Role,new SelectList(ViewBag.Roles), new { htmlAttributes = new { @class = "form-control dropdown" } })
            @Html.ValidationMessageFor(model=>model.Email,"",new { @class = "text-danger" })
        </div>
    </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>

    </div>}

